    var script = document.createElement('script');
    script.src = "https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS_HTML";
    script.onload = function() {
        MathJax.Hub.Config({
            tex2jax: {
                inlineMath : [ ['[l]','[/l]'],
                               ['$','$'],
                               ['\\(','\\)']
                             ],
                displayMath: [ ['[latex]','[/latex]'],
                               ['$$','$$'],
                               ["\\[","\\]"]
                             ],
